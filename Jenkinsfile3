pipeline {
    agent any

    stages {
        stage('Clean Workspace') {
            steps {
                cleanWs()
            }
        }

        stage('Checkout Code') {
            steps {
                git branch: 'main', url: 'https://github.com/Saundarya143/Book-My-Show.git'
            }
        }

        stage('Install Dependencies') {
            steps {
                sh 'npm install'
            }
        }

        stage('Docker Build & Run') {
            steps {
                sh """
                    docker build -t bookmyshow-app:latest .
                    docker run -d -p 3000:3000 --name bms-container bookmyshow-app:latest
                """
            }
        }
    }

    post {
        always {
            echo "Pipeline finished."
        }
        success {
            echo "Build and Deployment Successful!"
        }
        failure {
            echo "Build or Deployment Failed. Please check logs."
        }
    }
}
